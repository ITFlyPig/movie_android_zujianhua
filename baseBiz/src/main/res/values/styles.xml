<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!--    全屏：这里状态栏不会显示的-->
    <style name="FullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--    全屏的，没有边距的dialog-->
    <style name="FullScreenNormalDialog" parent="@android:style/Theme.Dialog">
        <!--        windowIsFloating被配置为true，就会通过window.setLayout(WRAP_CONTENT, WRAP_CONTENT)，否则就会设置为setLayout(MATCH_PARENT, MATCH_PARENT)：直接设置了onCreateView返回的View的宽高属性-->
        <!--        <item name="android:windowIsFloating">true</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:padding">0dp</item>

    </style>
</resources>
